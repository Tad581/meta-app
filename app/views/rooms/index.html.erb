<div class="app-container">
  <%= render 'layouts/navbar' %>
</div>
<div id="chatroom_container" class="row text-light">
  <div id="side_panel" class="col-md-4 col-sm-4 search-col">
    <h6> Chats </h6>
    <div class="search">
      <input placeholder="Search Messenger"/>
      <%= image_tag 'posts/search.png', alt: "", class: "search-icon"%>
    </div>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>
    <h4> Rooms </h4>
    <%= turbo_stream_from "rooms" %>
    <%= render 'layouts/new_room_form' %>
    <div id="rooms">
      <%= render @rooms%>
    </div>
  </div>
  <div id="room_container" class="col-md-8 col-sm-8 text-light">
    <% if @single_room %>
      <div id="single_room">
        <h4 class="text-center"> <%= @user&.email || @single_room.name %> </h4>
        <%= turbo_stream_from @single_room %>
        <div id="messages" data-controller="scroll">
          <%= render @messages %>
        </div>
        <%= render 'layouts/new_message_form' %>
      </div>
    <% else %>
      <p> Select a chat or start a new conversation </p>
    <% end %>
  </div>
</div>
